<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gatech.seclass.sdpguessit.CreatePuzzleActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/create_puzzle"
                android:layout_width="@dimen/field_width"
                android:layout_height="wrap_content"
                android:text="Create Puzzle" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_space" />

            <Button
                android:id="@+id/create_tournament"
                android:layout_width="@dimen/field_width"
                android:layout_height="wrap_content"
                android:text="Create Tournamet" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_space" />

            <Button
                android:id="@+id/play_puzzle"
                android:layout_width="@dimen/field_width"
                android:layout_height="wrap_content"
                android:text="Play Puzzle" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_space" />

            <Button
                android:id="@+id/play_tournament"
                android:layout_width="@dimen/field_width"
                android:layout_height="wrap_content"
                android:text="Play Tournamet" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_space" />

            <Button
                android:id="@+id/continue_tournament"
                android:layout_width="@dimen/field_width"
                android:layout_height="wrap_content"
                android:text="Continue Tournamet" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_space" />

            <Button
                android:id="@+id/player_puzzle_stats"
                android:layout_width="@dimen/field_width"
                android:layout_height="wrap_content"
                android:text="Player Puzzle Stats" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_space" />

            <Button
                android:id="@+id/player_tournament_stats"
                android:layout_width="@dimen/field_width"
                android:layout_height="wrap_content"
                android:text="Player Tournament Stats" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_space" />

            <Button
                android:id="@+id/puzzle_stats"
                android:layout_width="@dimen/field_width"
                android:layout_height="wrap_content"
                android:text="Puzzle Stats" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_space" />

            <Button
                android:id="@+id/tournament_stats"
                android:layout_width="@dimen/field_width"
                android:layout_height="wrap_content"
                android:text="Tournament Stats" />

        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
